@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @{
   
    if (Model.Users != null)
    {
        foreach (User s in Model.Users)
        {
            <div class="row">
                <div class="col-md-2">
                    @s.Id
                </div>
                <div class="col-md-2">
                    @s.Name
                </div>
                    @if (s.Messages != null) 
                    { 
                        foreach (var message in s.Messages)
                        {
                            <div class="col-md-2">
                                @message.Id
                            </div>
                            <div class="col-md-2">
                                @message.Type
                            </div>
                            <div class="col-md-2">
                                @message.Text
                            </div>
                        } 
                    }
                    <div class="clearfix"></div>
            </div>
        }
    }
}
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
